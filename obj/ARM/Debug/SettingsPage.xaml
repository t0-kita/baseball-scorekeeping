<Page
    x:Class="MMSS.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MMSS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:ConnectionId='2' x:Name="Navigations" 
                        PaneDisplayMode="LeftMinimal"
                        IsPaneOpen="False"
                                                          
                        Visibility="Collapsed"
                        >
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='3' x:Name="Main" Content="Top" Tag="Top"/>
                <NavigationViewItem x:ConnectionId='4' x:Name="Score" Content="Score" Tag="Score"/>
                <NavigationViewItem x:ConnectionId='5' x:Name="Data" Content="Data" Tag="Data"/>
                
                <NavigationViewItem x:ConnectionId='6' x:Name="Order" Content="Order" Tag="Order" Visibility="Collapsed"/>
                <NavigationViewItem x:ConnectionId='7' x:Name="Opt" Content="Opt" Tag="Opt" Visibility="Collapsed"/>
                <NavigationViewItem x:ConnectionId='8' x:Name="Team" Content="Team" Tag="Team" Visibility="Collapsed"/>
            </NavigationView.MenuItems>
        </NavigationView>

    </Grid>
</Page>

