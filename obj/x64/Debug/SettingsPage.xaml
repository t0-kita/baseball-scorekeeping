<Page
    x:Class="MMSS.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MMSS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:ConnectionId='2' x:Name="Navigations" 
                        PaneDisplayMode="LeftMinimal"
                        IsPaneOpen="False"
                                                          
                        Visibility="Visible"
                        >
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='25' x:Name="Main" Content="Top" Tag="Top"/>
                <NavigationViewItem x:ConnectionId='26' x:Name="Score" Content="Score" Tag="Score"/>
                <NavigationViewItem x:ConnectionId='27' x:Name="Data" Content="Data" Tag="Data"/>
                
                <NavigationViewItem x:ConnectionId='28' x:Name="Order" Content="Order" Tag="Order" Visibility="Collapsed"/>
                <NavigationViewItem x:ConnectionId='29' x:Name="Opt" Content="Opt" Tag="Opt" Visibility="Collapsed"/>
                <NavigationViewItem x:ConnectionId='30' x:Name="Team" Content="Team" Tag="Team" Visibility="Collapsed"/>
            </NavigationView.MenuItems>
        </NavigationView>
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="20">
                <TextBlock Text="選手データ" FontSize="20"/>
                <StackPanel Margin="10">
                    
                </StackPanel>
            </StackPanel>
            <StackPanel Margin="20">
                <TextBlock Text="球種" FontSize="20"/>
                <StackPanel x:ConnectionId='5' Margin="10" x:Name="BallTypeSTackPanel"                                  >
                    <StackPanel  ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView x:ConnectionId='20' x:Name="BallTypeListView" 
                                  Height="400"
                                  CanDragItems="True" 
                                  CanDrag="True" 
                                  AllowDrop="True" 
                                  CanReorderItems="True" 
                                                                   
                                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="BallTypeOrder"
                                             Header="順"
                                                       Text="{Binding ball_order, Mode=TwoWay}" 
                                                       Grid.Column="0"
                                                       Style="{ThemeResource BaseTextBlockStyle}"
                                                       Margin="12,6,0,0" FontSize="14"/>
                                        <TextBox x:Name="BallTypeName"
                                               Width="100"
                                             Header="名前"
                                                       Text="{Binding ball_type, Mode=TwoWay}" 
                                                       Grid.Column="1"
                                                       Grid.Row="0"
                                                        
                                                       Style="{ThemeResource BodyTextBlockStyle}"
                                                       Margin="12,6,0,0" HorizontalAlignment="Right"
                                                   />
                                        <TextBox x:ConnectionId='24' x:Name="BallTypeImg"
                                             Header="Img"
                                              Text="{Binding ball_img, Mode=TwoWay}"
                                                                            
                                                       Grid.Column="2"
                                                       Margin="12,6,0,0"/>


                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='6' x:Name="BallTypeAddButton"
                        Content="球種追加"
                                                        VerticalAlignment="Top" Padding="10,4,8,5" Margin="20,20,10,0"
                        >
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel>
                                        <TextBlock Text="球種を記入してください"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="球種" Width="80"/>
                                            <TextBox x:ConnectionId='19' x:Name="NewBallTypeNameCreate" 
                                             Width="120" 
                                                                                             />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Img番号" 
                                               Width="80"/>
                                            <ComboBox x:ConnectionId='17' 
                                        x:Name="NewBallTypeImgCode"
                                                                                              >
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock  
                                                    Text="{Binding ball_img}"
                                                    />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </StackPanel>
                                        <Button x:ConnectionId='16' 
                                    x:Name="NewBallTypeCreate_btn" 
                                    Content="登録" 
                                    IsEnabled="False" 
                                                                         />
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>

                        <StackPanel Padding="10" HorizontalAlignment="Right">
                            <TextBlock Text="Img番号"/>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <StackPanel Margin="5">
                                    <TextBlock Text="0"/>
                                    <Grid x:ConnectionId='15' x:Name="BallImgGrid_0" Margin="5"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                    <TextBlock Text="1"/>
                                    <Grid x:ConnectionId='14' x:Name="BallImgGrid_1" Margin="5"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                    <TextBlock Text="2"/>
                                    <Grid x:ConnectionId='13' x:Name="BallImgGrid_2" Margin="5"/>
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <StackPanel Margin="5">
                                    <TextBlock Text="3"/>
                                    <Grid x:ConnectionId='12' x:Name="BallImgGrid_3" Margin="5"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                    <TextBlock Text="4"/>
                                    <Grid x:ConnectionId='11' x:Name="BallImgGrid_4" Margin="5"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                    <TextBlock Text="5"/>
                                    <Grid x:ConnectionId='10' x:Name="BallImgGrid_5" Margin="5"/>
                                </StackPanel>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <StackPanel Margin="5">
                                    <TextBlock Text="6"/>
                                    <Grid x:ConnectionId='9' x:Name="BallImgGrid_6" Margin="5"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                    <TextBlock Text="7"/>
                                    <Grid x:ConnectionId='8' x:Name="BallImgGrid_7" Margin="5"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                    <TextBlock Text="8"/>
                                    <Grid x:ConnectionId='7' x:Name="BallImgGrid_8" Margin="5"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                    </StackPanel>


                </StackPanel>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Language"/>
                <ComboBox x:ConnectionId='3'
                        x:Name="LanguageComboBox"
                        PlaceholderText="Language"
                                                                            
                        Margin="10">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Text="{Binding name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>

