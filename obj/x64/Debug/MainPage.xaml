<Page
    x:Class="MMSS.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MMSS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView x:ConnectionId='2' x:Name="Navigations" 
                        PaneDisplayMode="LeftCompact"
                        IsPaneOpen="False"
                                                          
                        Visibility="Visible">
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='8' x:Name="Score" Content="Score" Tag="Score"/>
                <NavigationViewItem x:ConnectionId='9' x:Name="Data" Content="Data" Tag="Data"/>
                <NavigationViewItem x:ConnectionId='10' x:Name="Field" Content="Field" Tag="Field" Visibility="Collapsed"/>
                <NavigationViewItem x:ConnectionId='11' x:Name="Main" Content="Top" Tag="Top" Visibility="Collapsed"/>
                <NavigationViewItem x:ConnectionId='12' x:Name="Order" Content="Order" Tag="Order" Visibility="Collapsed"/>
                <NavigationViewItem x:ConnectionId='13' x:Name="Opt" Content="Opt" Tag="Opt" Visibility="Collapsed"/>
                <NavigationViewItem x:ConnectionId='14' x:Name="Team" Content="Team" Tag="Team" Visibility="Collapsed"/>
            </NavigationView.MenuItems>
        </NavigationView>
        <StackPanel 
            Orientation="Horizontal"
            Padding="50">
            <StackPanel 
                Orientation="Vertical"
                Padding="10">
                <Button x:ConnectionId='4' Content="Play Ball" Margin="10" VerticalAlignment="Top" Height="100" Width="200"                             />
                <Button x:ConnectionId='5' 
                Content="Data Analysis" 
                Margin="10" 
                VerticalAlignment="Top" 
                Height="100" 
                Width="200"
                IsEnabled="True"                                      />
                <Button x:ConnectionId='6' 
                Content="Players" 
                Margin="10" 
                VerticalAlignment="Top" 
                Height="100" 
                Width="200"
                IsEnabled="True"                                               />
                
                <Button x:ConnectionId='7' Content="Test"
                                              
                    Visibility="Collapsed"/>
            </StackPanel>
            <StackPanel 
                Orientation="Vertical"
                Padding="10">
                <Button x:ConnectionId='3' 
                Content="Game Result" 
                Margin="10" 
                VerticalAlignment="Top" 
                Height="100" 
                Width="200" 
                                                 />
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>

