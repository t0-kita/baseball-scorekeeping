                        x:Name="ReserveMember" 
                        Orientation="Horizontal"
                        >
                        
                        <ListView 
                            x:Name="TeamReserveNameListView" 
                            CanReorderItems="True" 
                            SelectionMode="Single" 
                            Height="400"
                            Tapped="ReservNameList_Item_Tapped"
                            Visibility="Collapsed">
                            <ListView.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="名前" 
                                               Width="100"
                                               Foreground="DarkRed" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Stretch" 
                                               Padding="30,0,0,0"/>
                                        <TextBlock Text="打" 
                                               Width="50"
                                               Foreground="DarkRed" 
                                               HorizontalAlignment="Center" Padding="15,0,0,0"
                                               />
                                        <TextBlock Text="投" 
                                               Width="50"
                                               Foreground="DarkRed" 
                                               HorizontalAlignment="Center" Padding="15,0,0,0"/>
                                        <TextBlock Text="背番号" 
                                               Width="80"
                                               Foreground="DarkRed" 
                                               HorizontalAlignment="Center" Padding="15,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.HeaderTemplate>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding name}"
                                                   Width="100"/>
                                        <TextBlock Text="{Binding bat}"
                                                   Width="50"/>
                                        <TextBlock Text="{Binding hand}"
                                                   Width="50"/>
                                        <TextBlock Text="{Binding player_num}"
                                                   Width="80" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5" Visibility="Collapsed">
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="名前"/>
                            <TextBox 
                                x:Name="ReservePlayerTextBox"
                                Width="120" TextChanged="ReservePlayerTextBox_TextChanged"
                                />
                        </StackPanel>
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="背番号"/>
                            <TextBox 
                                x:Name="ReservePlayerNumTextBox"
                                Width="80" TextChanged="ReservePlayerNumTextBox_TextChanged"
                                />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Height="400" VerticalAlignment="Top" Margin="20">
                    <Button x:Name="OrderNewEntryButton"
                        Content="新規登録"
                        Margin="10,10,10,10">
                        <Button.Flyout>
                            <Flyout>
                                <StackPanel>
                                    <TextBlock Text="新規選手登録"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="選手名" Width="80"/>
                                        <TextBox x:Name="NewCreatePlayerName" 
                                             Width="120" 
                                             TextChanged="NewPlayerCreate_TextChanging"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="背番号" Width="80"/>
                                        <TextBox x:Name="NewCreatePlayerNumber" 
                                             Width="120" 
                                             TextChanged="NewPlayerCreate_TextChanging"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="利き腕" Width="80"/>
                                        <ComboBox 
                                            x:Name="NewCreatePlayerHand_cmb"
                                            PlaceholderText="右"
                                            SelectionChanged="NewCreatePlayerHand_SelectionChanged"
                                            >
                                            <x:String>右</x:String>
                                            <x:String>左</x:String>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="打席" Width="80"/>
                                        <ComboBox x:Name="NewCreatePlayerBat_cmb"
                                                  PlaceholderText="右"
                                                  SelectionChanged="NewCreatePlayerBat_SelectionChanged">
                                            <x:String>右</x:String>
                                            <x:String>左</x:String>
                                            <x:String>両</x:String>
                                        </ComboBox>
                                        
                                    </StackPanel>
                                    <Button x:Name="NewCreatePlayer_btn" 
                                        Content="登録" 
                                        IsEnabled="False" 
                                        Click="NeWCreatePlayer_Button_Clicked"/>
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                    <Button Margin="10" Click="GameOrderEntryNavigation_btn_Click">選手記入</Button>
                    <Button x:Name="CsvFileOrderGetData_btn"
                        Content="CSV取込"
                        Margin="10,10,10,10" Click="CsvFileOrderGetData_btn_Clicked"/>
                    <Button x:Name="OrderEntryButton"
                        Content="登録" 
                        Margin="10"
                        Click="OrderEntryButton_Clicked"
                            Height="50"
                            Width="100" 
                            FontSize="20" 
                            VerticalAlignment="Bottom"/>
                    <Button x:Name="TestGameStartFlgBtn"
                            Content="テスト"
                            Margin="10,10,10,10"
                            Click="TestGameStartFlg_Clicked"
                            Visibility="Collapsed"/>
                </StackPanel>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
