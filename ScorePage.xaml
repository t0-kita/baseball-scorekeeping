<Page
    x:Class="MMSS.ScorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MMSS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="Score">
        <NavigationView x:Name="Navigations" 
                        PaneDisplayMode="LeftMinimal"
                        IsPaneOpen="False"
                        ItemInvoked="NavView_ItemInvoked" 
                        Visibility="Visible"
                        >
            <NavigationView.MenuItems>
                
                
                <NavigationViewItem x:Name="Main" Content="Top" Tag="Top"/>
                <NavigationViewItem x:Name="Data" Content="Data" Tag="Data"/>
                
                <NavigationViewItem x:Name="Opt" Content="Option" Tag="Opt" Visibility="Collapsed"/>
                <NavigationViewItem x:Name="Team" Content="Team" Tag="Team" Visibility="Collapsed"/>
                <NavigationViewItem x:Name="Order" Content="Order" Tag="Order" Visibility="Collapsed"/>
                
            </NavigationView.MenuItems>
        </NavigationView>

        <StackPanel Orientation="Horizontal">

            <StackPanel Orientation="Vertical">
                <Grid x:Name="ZoneGrid" 
                      Margin="100,10,0,0" 
                      Height="481" 
                      VerticalAlignment="Top" 
                      HorizontalAlignment="Left" 
                      Width="335">

                    <Image 
                        x:Name="ZoneImage" 
                        Source="/Assets/zone.png" 
                        RenderTransformOrigin="0.0,0.0" 
                        Tapped="Zone_Image_Tapped" Margin="0,0,0,0">
                        

                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout x:Name="MenuFlyItem"
                                         Placement="Left"
                                        ShowMode="Transient" 
                                        Closed="MenuFlyItem_Closed">
                                <MenuFlyoutItem Name="MenuFlyItemBall" 
                                                Text="ボール" Click="Next_Ball"/>
                                <MenuFlyoutItem Name="MenuFlyItemStrike" 
                                                Text="見逃し" Click="Next_Ball"/>
                                <MenuFlyoutItem Name="MenuFlyItemSwingStrike" 
                                                Text="空振り" Click="Next_Ball"/>
                                <MenuFlyoutItem Name="MenuFlyItemFoul" 
                                                Text="ファウル" Click="Next_Ball"/>
                                <MenuFlyoutItem Name="MenuFlyItemInPlay" 
                                                Text="インプレー" Click="Next_Ball"/>
                                <MenuFlyoutItem Name="MenuFlyItemDead" 
                                                Text="死球" Click="Next_Ball"/>
                                <MenuFlyoutItem Name="MenuFlyItemCancel" 
                                                Text="キャンセル" Click="Cancel_Ball"/>
                            </MenuFlyout>
                        </FlyoutBase.AttachedFlyout>
                        
                    </Image>
                    
                </Grid>
                <Grid Margin="100,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Border
                            BorderBrush="#213a70" 
                            BorderThickness="1">
                            <ListView 
                                x:Name="BallTypeListView" 
                                Height="120" 
                                Width="180"
                                AllowDrop="True"
                                CanReorderItems="True"
                                Margin="10,0,10,0" 
                                Tapped="BallTypeListView_Item_Tapped" 
                                SelectionChanged="BallTypeListView_SelectionChanged">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <TextBlock Text="{Binding ball_type}" 
                                           Grid.Column="0"
                                           Style="{ThemeResource BaseTextBlockStyle}"
                                           Margin="0,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Border>
                        <StackPanel>
                            <StackPanel 
                            Orientation="Horizontal"
                            Margin="10,10,0,10"
                            VerticalAlignment="Top">
                                <TextBox 
                                x:Name="BallSpeedText" 
                                Width="90"   
                                Height="35"
                                PlaceholderText="入力.."
                                MaxLength="3"
                                TextWrapping="NoWrap"
                                InputScope="Number" 
                                TextChanged="BallSpeedText_TextChanged"
                                />

                                <TextBlock Text="km/h"
                               VerticalAlignment="Bottom"
                               SelectionHighlightColor="AliceBlue" 
                               TextWrapping="Wrap"
                               LineHeight="10"
                               LineStackingStrategy="BaselineToBaseline" FontSize="10"/>
                            </StackPanel>
                            <Button 
                                x:Name="EntryBallResult_Button"
                                Content="登録"
                                Height="50"
                                Width="100"
                                Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                Visibility="Collapsed" 
                                Click="EntryBallResult_Button_Click"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:Name="TypeStackPanel" Orientation="Horizontal" Margin="18,0,-18,0" Visibility="Collapsed">
                        <StackPanel.ChildrenTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition IsStaggeringEnabled="True" />
                            </TransitionCollection>
                        </StackPanel.ChildrenTransitions>
                        <Button x:Name="type0_btn" Background="Transparent" Click="Type_Item_Tapped" Loaded="Type_Item_Load">
                            <Image x:Name="type0" Source="/Assets/type0.png" Height="50" Width="50"/>
                        </Button>
                        <Button x:Name="type1_btn" Background="Transparent" Click="Type_Item_Tapped">
                            <Image x:Name="type1" Source="/Assets/type1.png" Height="50" Width="50"/>
                        </Button>
                        <Button x:Name="type2_btn" Background="Transparent" Click="Type_Item_Tapped">
                            <Image x:Name="type2" Source="/Assets/type2.png" Height="50" Width="50"/>
                        </Button>
                        <Button x:Name="type3_btn" Background="Transparent" Click="Type_Item_Tapped">
                            <Image x:Name="type3" Source="/Assets/type3.png" Height="50" Width="50"/>
                        </Button>
                        <Button x:Name="type4_btn" Background="Transparent" Click="Type_Item_Tapped">
                            <Image x:Name="type4" Source="/Assets/type4.png" Height="50" Width="50"/>
                        </Button>
                        <Button x:Name="type5_btn" Background="Transparent" Click="Type_Item_Tapped">
                            <Image x:Name="type5" Source="/Assets/type5.png" Height="50" Width="50"/>
                        </Button>
                    </StackPanel>
                    
                </Grid>
                <TextBox 
                    Margin="100,0,0,0"
                    Header="メモ"
                    x:Name="BallCommentTextBox"
                    Height="80"
                    TextWrapping="NoWrap"
                    Visibility="Collapsed"/>
                
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Grid Margin="0,0,0,0">

                </Grid>

                <StackPanel x:Name="Counts"
                                Orientation="Vertical" 
                                BorderBrush="AliceBlue" 
                                BorderThickness="1" 
                                Margin="10,20,10,10">
                    <TextBlock Text="カウント" 
                               SelectionHighlightColor="AliceBlue" 
                               TextWrapping="Wrap"
                               LineHeight="10"
                               LineStackingStrategy="BaselineToBaseline"/>
                    <StackPanel x:Name="ballCount" Orientation="Horizontal">
                        <StackPanel.ChildrenTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition IsStaggeringEnabled="True" />
                            </TransitionCollection>
                        </StackPanel.ChildrenTransitions>
                        <Ellipse x:Name="oneBall" Height="20" Width="20" Stroke="Black"/>
                        <Ellipse x:Name="twoBall" Height="20" Width="20" Stroke="Black"/>
                        <Ellipse x:Name="threeBall" Height="20" Width="20" Stroke="Black"/>
                        <Ellipse x:Name="fourBall" Height="20" Width="20" Stroke="Black"/>
                    </StackPanel>
                    <StackPanel x:Name="strikeCount" Orientation="Horizontal">
                        <StackPanel.ChildrenTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition IsStaggeringEnabled="True" />
                            </TransitionCollection>
                        </StackPanel.ChildrenTransitions>
                        <Ellipse x:Name="oneStrike" Height="20" Width="20" Stroke="Black"/>
                        <Ellipse x:Name="twoStrike" Height="20" Width="20" Stroke="Black"/>
                        <Ellipse x:Name="threeStrike" Height="20" Width="20" Stroke="Black"/>

                    </StackPanel>
                    <StackPanel x:Name="outCount"  Orientation="Horizontal">
                        <StackPanel.ChildrenTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition IsStaggeringEnabled="True" />
                            </TransitionCollection>
                        </StackPanel.ChildrenTransitions>
                        <Ellipse x:Name="oneOut" Height="20" Width="20" Stroke="Black"/>
                        <Ellipse x:Name="twoOut" Height="20" Width="20" Stroke="Black"/>
                        <Ellipse x:Name="threeOut" Height="20" Width="20" Stroke="Black"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="ランナー"/>
                <CheckBox 
                    x:Name="run_1" 
