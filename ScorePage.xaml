                                <MenuFlyoutItem 
                                            Name="PickOff_3_GoField" 
                                            Text="フィールドへ" 
                                            Click="PickOff_Item_Click"/>
                            </MenuFlyoutSubItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button 
                    x:Name="Runner_Play_btn"
                    Content="走塁" 
                    Margin="10" Click="Runner_Play_btn_Click"
                    />
                <Button
                    Content="その他"
                    Margin="10">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="申告敬遠" Click="OtherAction_Item_Click"/>
                            <MenuFlyoutItem Text="打撃妨害" Click="OtherAction_Item_Click"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>

                <Button 
                    Content="選手交代" 
                    Click="GamePlayingPlayerChangMsg_btn_Clicked"
                    Margin="10"
                    />
                <Button
                    Content="カウント変更"
                    Margin="10,50,10,10">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutSubItem Text="ボール" >
                                <MenuFlyoutItem Text="0ボール" Click="OutCountChange_Item_Click"/>
                                <MenuFlyoutItem Text="1ボール" Click="OutCountChange_Item_Click"/>
                                <MenuFlyoutItem Text="2ボール" Click="OutCountChange_Item_Click"/>
                                <MenuFlyoutItem Text="3ボール" Click="OutCountChange_Item_Click"/>
                            </MenuFlyoutSubItem>
                            <MenuFlyoutSubItem Text="ストライク" >
                                <MenuFlyoutItem Text="0ストライク" Click="OutCountChange_Item_Click"/>
                                <MenuFlyoutItem Text="1ストライク" Click="OutCountChange_Item_Click"/>
                                <MenuFlyoutItem Text="2ストライク" Click="OutCountChange_Item_Click"/>
                            </MenuFlyoutSubItem>
                            <MenuFlyoutSubItem Text="アウト" >
                                <MenuFlyoutItem Text="0アウト" Click="OutCountChange_Item_Click"/>
                                <MenuFlyoutItem Text="1アウト" Click="OutCountChange_Item_Click"/>
                                <MenuFlyoutItem Text="2アウト" Click="OutCountChange_Item_Click"/>
                                <MenuFlyoutItem Text="チェンジ" Click="OutCountChange_Item_Click"/>
                            </MenuFlyoutSubItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button
                    Content="打順変更"
                    Margin="10">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="次の打者へ" Click="BatterIdChange_Item_Click"/>
                            <MenuFlyoutItem Text="前の打者へ" Click="BatterIdChange_Item_Click"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button
                    Content="攻撃変更"
                    Margin="10"
                    Visibility="Collapsed">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="次の攻撃へ" Click="AttackChange_Item_Click"/>
                            <MenuFlyoutItem Text="前の攻撃へ" Click="AttackChange_Item_Click"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                
                <Button x:Name="cancel_btn" Visibility="Collapsed"/>
            </StackPanel>

